// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Type {
  TEXT
  FILE
}

model User {
  id      Int    @id @default(autoincrement())
  email   String @unique
  picture String
}

model Friend {
  id      Int @id @default(autoincrement())
  userOne Int
  userTwo Int
}

model FriendRequest {
  id       Int    @id @default(autoincrement())
  sender   String
  reciever String
}

model Message {
  id      Int      @id @default(autoincrement())
  type    Type
  content String   @db.LongText
  date    DateTime @default(now())
  from    Int
  to      Int
}
